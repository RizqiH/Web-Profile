---
const year = new Date().getFullYear()
---

<link
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
  rel="stylesheet"
/>

<footer class="bg-gray-300 text-white py-10">
  <div class="container mx-auto flex flex-col items-center">
    <!-- Logo or Company Name -->
    <div class="mb-4 text-center">
      <h1 class="text-xl font-semibold text-black tracking-wider">
        Here is My
        <a
          href="https://cv1121.netlify.app/"
          class="bg-gray-700 text-gray-300 py-1 px-3 rounded-full shadow-lg hover:bg-black transition-all duration-300 transform hover:scale-105"
        >
          CV
        </a>
      </h1>
    </div>

    <!-- Copyright Section -->
    <p class="mb-6 text-center text-gray-700">
      &copy; {year} Muhammad Rizqi Amanan Habibullah. All rights reserved.
    </p>

    <!-- Social Links with Animated Hover Effects -->
    <ul class="flex space-x-6 mb-8">
      <li>
        <a
          href="https://github.com/RizqiH"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-black transition-transform transform hover:scale-125"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 16 16"
            class="w-8 h-8"
          >
            <path
              d="M8 0a8 8 0 0 0-2.532 15.575c.4.075.55-.173.55-.385 0-.19-.007-.693-.011-1.362-2.239.49-2.712-1.08-2.712-1.08-.366-.933-.894-1.18-.894-1.18-.732-.5.056-.49.056-.49.81.056 1.238.832 1.238.832.72 1.238 1.889.88 2.342.67.073-.52.28-.88.508-1.08-1.77-.202-3.64-.885-3.64-3.94 0-.87.31-1.58.82-2.14-.082-.202-.356-1.021.078-2.13 0 0 .67-.214 2.2.82A7.665 7.665 0 0 1 8 3.315c.67.003 1.34.09 1.96.26 1.52-1.03 2.19-.82 2.19-.82.436 1.11.16 1.93.08 2.13.51.56.82 1.27.82 2.14 0 3.06-1.87 3.73-3.66 3.93.29.25.55.74.55 1.49 0 1.07-.01 1.93-.01 2.2 0 .215.15.462.55.385A8 8 0 0 0 8 0z"
            ></path>
          </svg>
        </a>
      </li>
      <li>
        <a
          href="https://www.linkedin.com/in/rizki-amanan/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-black transition-transform transform hover:scale-125"
        >
          <i class="fab fa-linkedin w-8 h-8 text-3xl"></i>
        </a>
      </li>
      <li>
        <a
          href="https://www.instagram.com/username"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-700 hover:text-black transition-transform transform hover:scale-125"
        >
          <i class="fab fa-instagram w-8 h-8 text-3xl"></i>
        </a>
      </li>
    </ul>

    <!-- Call to Action (Optional) -->
    <a
      href="Contact"
      class="bg-gray-700 text-gray-300 py-2 px-6 rounded-full shadow-lg hover:bg-black transition-all duration-300 transform hover:scale-105"
    >
      Contact Me
    </a>
  </div>
</footer>

<style>
  /* Footer Gradients and Text Styling */
  .bg-gradient-to-r {
    background: linear-gradient(to right, #1a1a1a, #2e2e2e, #1a1a1a);
  }

  /* Smooth Transition for Social Icons */
  .transition-transform {
    transition:
      transform 0.3s ease-in-out,
      color 0.3s ease;
  }

  /* Button Effects */
  button:hover {
    box-shadow: 0px 10px 15px rgba(16, 16, 15, 0.4);
  }
</style>
