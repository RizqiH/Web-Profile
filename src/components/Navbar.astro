---
const links = [
  { name: 'Home', href: 'home' },
  { name: 'About', href: 'aboutme' },
  { name: 'Projects', href: '#project' },
  { name: 'Contact', href: 'Contact' },
]
---

<nav class="fixed top-4 inset-x-0 z-50">
  <div class="max-w-2xl mx-auto px-8">
    <div class="w-full mx-auto">
      <div
        class="relative flex items-center justify-between w-full p-3 mx-auto bg-white ring-1 uppercase ring-zinc-200 backdrop-blur-xl backdrop-filter rounded-xl md:rounded-full"
      >
        <!-- Left-aligned Logo -->
        <a
          href="/"
          class="text-gray-600 hover:text-black gap-4 items-center tracking-tighter inline-flex font-bold text-xl"
          style="transition: color 0.3s ease;"
        >
          Rizqi
        </a>

        <!-- Mobile Menu Button (Hamburger on the Right) -->
        <div class="md:hidden ml-auto">
          <button id="menu-btn" class="text-gray-700 focus:outline-none">
            <!-- Menu Icon (Hamburger / Close) -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              id="hamburger-icon"
              class="h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              id="close-icon"
              class="h-6 w-6 hidden"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <!-- Navigation Links for Desktop -->
        <ul
          class="hidden md:space-y-0 md:ml-auto items-center md:inline-flex justify-center text-center md:text-left gap-3 md:block"
        >
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-500 hover:text-black transition-colors duration-300"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Mobile Menu with Slide-Down Animation -->
      <div
        id="menu"
        class="hidden md:hidden transform -translate-y-full transition-transform duration-300 ease-in-out bg-white shadow-lg mt-2 rounded-md"
      >
        <ul class="space-y-2 py-2 px-4 text-center">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="block text-gray-700 hover:text-blue-600 transition-colors duration-300 py-2 rounded-md"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('menu-btn')!
  const menu = document.getElementById('menu')!
  const hamburgerIcon = document.getElementById('hamburger-icon')!
  const closeIcon = document.getElementById('close-icon')!
  let menuOpen = false

  menuBtn.addEventListener('click', () => {
    menuOpen = !menuOpen

    // Toggle classes for slide-down and slide-up animation
    if (menuOpen) {
      menu.classList.remove('hidden', '-translate-y-full')
      menu.classList.add('translate-y-0')
      hamburgerIcon.classList.add('hidden')
      closeIcon.classList.remove('hidden')
    } else {
      menu.classList.remove('translate-y-0')
      menu.classList.add('-translate-y-full')
      closeIcon.classList.add('hidden')
      hamburgerIcon.classList.remove('hidden')

      // Hide the menu
      menu.classList.add('hidden')
    }
  })
</script>
